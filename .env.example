# Variables de entorno para Railway + Supabase
# Copiar estas variables en Railway Dashboard

# === CONFIGURACIÓN DE FLASK ===
FLASK_ENV=production
FLASK_APP=agente_digital_api.app:create_app()

# === CLAVES DE SEGURIDAD (CAMBIAR EN PRODUCCIÓN) ===
SECRET_KEY=generate-a-secure-random-key-minimum-32-characters
JWT_SECRET_KEY=generate-another-secure-random-key-minimum-32-characters

# === BASE DE DATOS SUPABASE ===
# Obtener de: Settings > Database > Connection string > URI
SUPABASE_DB_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# === SUPABASE API (Opcional, para storage y auth) ===
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# === CONFIGURACIÓN ADICIONAL ===
DB_DRIVER=PostgreSQL
PORT=8080

# === CORS ===
CORS_ORIGINS=https://your-frontend-domain.com,https://your-app.railway.app

# === LOGGING ===
LOG_LEVEL=INFO